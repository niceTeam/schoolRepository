<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wisdomschool.student.mapper.CsrelationMapper">
    <!-- Csrelation的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_Csrelation_Map" type="com.wisdomschool.student.pojo.Csrelation">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="stuId" jdbcType="INTEGER" property="stuid" />
        <result column="classId" jdbcType="INTEGER" property="classid" />
        <result column="csTime" jdbcType="DATE" property="cstime" />
        <result column="isChange" jdbcType="INTEGER" property="ischange" />
    </resultMap>

    <!-- 数据库中表名为:csrelation的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="csrelation_Column">
        csrelation.id as id
        ,csrelation.stuId as stuId
        ,csrelation.classId as classId
        ,csrelation.csTime as csTime
        ,csrelation.isChange as isChange
    </sql>

    <!--获得类名为:Csrelation对应的数据库表的数据总行数 -->
    <select id="getCsrelationRowCount" resultType="java.lang.Long">
        select count(id) from csrelation
    </select>
    <!-- 获得类名为:Csrelation对应数据库中表的数据集合 -->
    <select id="selectCsrelation" resultMap="result_Csrelation_Map">
        select 
        <include refid="csrelation_Column" /> 
        from csrelation
    </select> 

    <!-- 获得一个Csrelation对象,以参数Csrelation对象中不为空的属性作为条件进行查询-->
    <select id="selectCsrelationByObj" parameterType="com.wisdomschool.student.pojo.Csrelation" resultMap="result_Csrelation_Map">
        select 
            <include refid="csrelation_Column" /> 
        from csrelation
        <where>
            <if test="ischange != null "> and csrelation.isChange = #{ischange,jdbcType=INTEGER}</if>
            <if test="cstime != null "> and csrelation.csTime = #{cstime,jdbcType=DATE}</if>
            <if test="classid != null "> and csrelation.classId = #{classid,jdbcType=INTEGER}</if>
            <if test="stuid != null "> and csrelation.stuId = #{stuid,jdbcType=INTEGER}</if>
            <if test="id != null "> and csrelation.id = #{id,jdbcType=INTEGER}</if>
        </where>
    </select> 

    <!-- 通过Csrelation的id获得对应数据库中表的数据对象-->
    <select id="selectCsrelationById" parameterType="java.lang.Integer" resultMap="result_Csrelation_Map">
        select 
            <include refid="csrelation_Column" /> 
        from csrelation
        where csrelation.id = #{id,jdbcType=INTEGER}
    </select> 

    <!-- 将Csrelation插入到对应数据库的表中,包括属性值为null的数据-->

    <insert useGeneratedKeys="true" keyColumn="id" keyProperty="id" id="insertCsrelation" parameterType="com.wisdomschool.student.pojo.Csrelation">
        insert into csrelation(id,stuId,classId,csTime,isChange) 
        values(#{id,jdbcType=INTEGER},#{stuid,jdbcType=INTEGER},#{classid,jdbcType=INTEGER},#{cstime,jdbcType=DATE},#{ischange,jdbcType=INTEGER})
    </insert>

    <!-- 将Csrelation中属性值不为null的数据,插入到对应数据库的表中-->
    <insert useGeneratedKeys="true" keyColumn="id" keyProperty="id" id="insertNonEmptyCsrelation" parameterType="com.wisdomschool.student.pojo.Csrelation">
        insert into csrelation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="stuid != null">stuId,</if>
            <if test="classid != null">classId,</if>
            <if test="cstime != null">csTime,</if>
            <if test="ischange != null">isChange,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null"> #{id,jdbcType=INTEGER},</if>
            <if test="stuid != null"> #{stuid,jdbcType=INTEGER},</if>
            <if test="classid != null"> #{classid,jdbcType=INTEGER},</if>
            <if test="cstime != null"> #{cstime,jdbcType=DATE},</if>
            <if test="ischange != null"> #{ischange,jdbcType=INTEGER},</if>
        </trim>
    </insert>

    <!-- 通过Csrelation的id将数据库表中对应的数据删除-->
    <delete id="deleteCsrelationById" parameterType="java.lang.Integer">
        delete from csrelation
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <!-- 通过Csrelation的id将Csrelation的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateCsrelationById" parameterType="com.wisdomschool.student.pojo.Csrelation">
        update csrelation set
            stuId=#{stuid,jdbcType=INTEGER}
            ,classId=#{classid,jdbcType=INTEGER}
            ,csTime=#{cstime,jdbcType=DATE}
            ,isChange=#{ischange,jdbcType=INTEGER}
        where id=#{id,jdbcType=INTEGER}
    </update>

    <!-- 通过Csrelation的id将Csrelation中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyCsrelationById" parameterType="com.wisdomschool.student.pojo.Csrelation">
        update csrelation
        <set>
            <if test="stuid != null">
                stuId=#{stuid,jdbcType=INTEGER},
            </if>
            <if test="classid != null">
                classId=#{classid,jdbcType=INTEGER},
            </if>
            <if test="cstime != null">
                csTime=#{cstime,jdbcType=DATE},
            </if>
            <if test="ischange != null">
                isChange=#{ischange,jdbcType=INTEGER},
            </if>
        </set>
        where id=#{id,jdbcType=INTEGER}
    </update>

</mapper>