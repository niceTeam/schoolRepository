<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wisdomschool.student.mapper.CtrelationMapper">
    <!-- Ctrelation的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_Ctrelation_Map" type="com.wisdomschool.student.pojo.Ctrelation">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="teaId" jdbcType="INTEGER" property="teaid" />
        <result column="classId" jdbcType="INTEGER" property="classid" />
        <result column="ctTime" jdbcType="DATE" property="cttime" />
    </resultMap>

    <!-- 数据库中表名为:ctrelation的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="ctrelation_Column">
        ctrelation.id as id
        ,ctrelation.teaId as teaId
        ,ctrelation.classId as classId
        ,ctrelation.ctTime as ctTime
    </sql>

    <!--获得类名为:Ctrelation对应的数据库表的数据总行数 -->
    <select id="getCtrelationRowCount" resultType="java.lang.Long">
        select count(id) from ctrelation
    </select>
    <!-- 获得类名为:Ctrelation对应数据库中表的数据集合 -->
    <select id="selectCtrelation" resultMap="result_Ctrelation_Map">
        select 
        <include refid="ctrelation_Column" /> 
        from ctrelation
    </select> 

    <!-- 获得一个Ctrelation对象,以参数Ctrelation对象中不为空的属性作为条件进行查询-->
    <select id="selectCtrelationByObj" parameterType="com.wisdomschool.student.pojo.Ctrelation" resultMap="result_Ctrelation_Map">
        select 
            <include refid="ctrelation_Column" /> 
        from ctrelation
        <where>
            <if test="cttime != null "> and ctrelation.ctTime = #{cttime,jdbcType=DATE}</if>
            <if test="classid != null "> and ctrelation.classId = #{classid,jdbcType=INTEGER}</if>
            <if test="teaid != null "> and ctrelation.teaId = #{teaid,jdbcType=INTEGER}</if>
            <if test="id != null "> and ctrelation.id = #{id,jdbcType=INTEGER}</if>
        </where>
    </select> 

    <!-- 通过Ctrelation的id获得对应数据库中表的数据对象-->
    <select id="selectCtrelationById" parameterType="java.lang.Integer" resultMap="result_Ctrelation_Map">
        select 
            <include refid="ctrelation_Column" /> 
        from ctrelation
        where ctrelation.id = #{id,jdbcType=INTEGER}
    </select> 

    <!-- 将Ctrelation插入到对应数据库的表中,包括属性值为null的数据-->

    <insert useGeneratedKeys="true" keyColumn="id" keyProperty="id" id="insertCtrelation" parameterType="com.wisdomschool.student.pojo.Ctrelation">
        insert into ctrelation(id,teaId,classId,ctTime) 
        values(#{id,jdbcType=INTEGER},#{teaid,jdbcType=INTEGER},#{classid,jdbcType=INTEGER},#{cttime,jdbcType=DATE})
    </insert>

    <!-- 将Ctrelation中属性值不为null的数据,插入到对应数据库的表中-->
    <insert useGeneratedKeys="true" keyColumn="id" keyProperty="id" id="insertNonEmptyCtrelation" parameterType="com.wisdomschool.student.pojo.Ctrelation">
        insert into ctrelation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="teaid != null">teaId,</if>
            <if test="classid != null">classId,</if>
            <if test="cttime != null">ctTime,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null"> #{id,jdbcType=INTEGER},</if>
            <if test="teaid != null"> #{teaid,jdbcType=INTEGER},</if>
            <if test="classid != null"> #{classid,jdbcType=INTEGER},</if>
            <if test="cttime != null"> #{cttime,jdbcType=DATE},</if>
        </trim>
    </insert>

    <!-- 通过Ctrelation的id将数据库表中对应的数据删除-->
    <delete id="deleteCtrelationById" parameterType="java.lang.Integer">
        delete from ctrelation
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <!-- 通过Ctrelation的id将Ctrelation的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateCtrelationById" parameterType="com.wisdomschool.student.pojo.Ctrelation">
        update ctrelation set
            teaId=#{teaid,jdbcType=INTEGER}
            ,classId=#{classid,jdbcType=INTEGER}
            ,ctTime=#{cttime,jdbcType=DATE}
        where id=#{id,jdbcType=INTEGER}
    </update>

    <!-- 通过Ctrelation的id将Ctrelation中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyCtrelationById" parameterType="com.wisdomschool.student.pojo.Ctrelation">
        update ctrelation
        <set>
            <if test="teaid != null">
                teaId=#{teaid,jdbcType=INTEGER},
            </if>
            <if test="classid != null">
                classId=#{classid,jdbcType=INTEGER},
            </if>
            <if test="cttime != null">
                ctTime=#{cttime,jdbcType=DATE},
            </if>
        </set>
        where id=#{id,jdbcType=INTEGER}
    </update>

</mapper>