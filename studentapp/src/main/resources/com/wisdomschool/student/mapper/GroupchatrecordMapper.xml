        select 
            <include refid="groupchatrecord_Column" /> 
        from groupchatrecord
        <where>
            <if test="isremove != null "> and groupchatrecord.isRemove = #{isremove,jdbcType=INTEGER}</if>
            <if test="time != null "> and groupchatrecord.time = #{time,jdbcType=DATE}</if>
            <if test="messagefile != null "> and groupchatrecord.messageFile = #{messagefile,jdbcType=VARCHAR}</if>
            <if test="message != null "> and groupchatrecord.message = #{message,jdbcType=VARCHAR}</if>
            <if test="sendid != null "> and groupchatrecord.sendId = #{sendid,jdbcType=INTEGER}</if>
