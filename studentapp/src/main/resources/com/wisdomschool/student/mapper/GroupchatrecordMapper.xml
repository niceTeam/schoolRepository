    <select id="selectGroupchatrecordById" parameterType="java.lang.Integer" resultMap="result_Groupchatrecord_Map">
        select 
            <include refid="groupchatrecord_Column" /> 
        from groupchatrecord
        where groupchatrecord.id = #{id,jdbcType=INTEGER}
