    <sql id="groupchatrecord_Column">
        groupchatrecord.id as id
        ,groupchatrecord.sendId as sendId
        ,groupchatrecord.message as message
        ,groupchatrecord.messageFile as messageFile
        ,groupchatrecord.time as time
